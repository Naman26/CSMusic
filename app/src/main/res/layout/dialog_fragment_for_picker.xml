<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Loops Num:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIterations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:text="2"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/tvLoopPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tvIterations"
        android:text="&#9650;"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvLoopMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvIterations"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tvIterations"
        android:text="&#9660;"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnAddLoops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvIterations"
        android:text="Add" />

</RelativeLayout>