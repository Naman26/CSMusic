<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llFields"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="4">

        <RelativeLayout
            android:id="@+id/rlKey"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvKeyHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvKeyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvKeyHeader"
                android:layout_alignParentStart="true"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvKeyPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvKeyValue"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:text="&#9650;"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvKeyMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvKeyValue"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="-20dp"
                android:text="&#9660;"
                android:textSize="25sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlNote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvNoteHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Note"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvNoteValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNoteHeader"
                android:layout_alignParentStart="true"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvNotePlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvNoteValue"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:text="&#9650;"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvNoteMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvNoteValue"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="-20dp"
                android:text="&#9660;"
                android:textSize="25sp"

                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlOctave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvOctaveHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Oct"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvOctaveValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOctaveHeader"
                android:layout_alignParentStart="true"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvOctavePlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvOctaveValue"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:text="&#9650;"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvOctaveMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvOctaveValue"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="-25dp"
                android:text="&#9660;"
                android:textSize="25sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlLength"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvLengthHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Count"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvLengthValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tvLengthHeader"
                android:layout_alignParentStart="true"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvLengthPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvLengthValue"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:text="&#9650;"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvLengthMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvLengthValue"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="&#9660;"
                android:textSize="25sp" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llFields"
        android:layout_centerHorizontal="true"
        android:text="Add" />

</RelativeLayout>